{% set title = 'Schedule ' + (schedule.scheduleName or 'not found') %}
{% extends 'layout.html.j2' %}

{% block content %}
{# {{ schedule | dump }} #}

{% if schedule %}
  <div class="schedule">
      <div class="top_panel">ON CALL</div>
      <div class="schedule_name"><a href="{{ schedule.scheduleURL }}">{{ schedule.scheduleName }}</a></div>
      <div class="user">
           <div class="user_avatar"><a href="{{ schedule.userURL }}"><img src="{{ schedule.userAvatarSized() }}"></a></div>
           <div class="user_name"><a href="{{ schedule.userURL }}">{{ schedule.userName }}</a></div>
      </div>
      <div class="date_panel">
           <div class="date date_start">
            <span>From:</span> {{ schedule.dateStart.format('dddd, MMM DD') }}
            <span class="time">{{ schedule.dateStart.format('LT') }}</span>
          </div>
           <div class="date date_end">
            <span>To:</span>
            <span class="date-weekday">{{ schedule.dateEnd.format('dddd') }},</span>
            <span class="date-date">{{ schedule.dateEnd.format('MMM DD') }}</span>
            <span class="date-time">{{ schedule.dateEnd.format('LT') }}</span>
          </div>
      </div>
  </div>
{% else %}
  <div class="schedule not_found">
    <div class="top_panel">ON CALL</div>
    <div class="user">
      <div class="user_avatar"><img src="https://www.gravatar.com/avatar/0?s=2048&amp;d=mp"></div>
      <div class="error">No one is on call</div>
    </div>
    <div class="date_panel"><div class="date date_start">&nbsp;</div></div>
  </div>
{% endif %}

{% endblock %}
