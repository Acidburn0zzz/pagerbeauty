    "node-fetch": "^2.2.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "eslint": "^5.4.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "nodemon": "^1.18.4"
