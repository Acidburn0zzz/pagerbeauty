{
  "name": "pagerbeauty",
  "version": "0.2.0",
  "description": "Add concise PagerDuty on-calls widget to your wallboard",
  "repository": "git@github.com:sergiitk/pagerbeauty.git",
  "author": "Sergii Tkachenko <hi@sergii.org>",
  "license": "MIT",
  "main": "./src/pagerbeauty",
  "engines": {
    "node": "^10.14.0",
    "npm": "^6.4.1",
    "yarn": "^1.12.0"
  },
  "scripts": {
    "test": "npm run test:unit",
    "test:unit": "NODE_ENV=test ava test/unit",
    "test:integration": "NODE_ENV=test ava test/integration",
    "test:full": "npm run test:unit && npm run test:integration",
    "lint": "eslint --ext .js --ext .mjs .",
    "build": "webpack --config webpack.dev.js",
    "build:watch": "webpack --watch --config webpack.dev.js",
    "build:prod": "NODE_ENV=production webpack --config webpack.prod.js",
    "app": "node --experimental-modules src/pagerbeauty.mjs",
    "app:watch": "nodemon --experimental-modules src/pagerbeauty.mjs",
    "app:prod": "NODE_ENV=production node --experimental-modules src/pagerbeauty.mjs"
  },
  "dependencies": {
    "dotenv": "^6.1.0",
    "koa": "^2.6.1",
    "koa-basic-auth": "^3.0.0",
    "koa-mount": "^4.0.0",
    "koa-route": "^3.2.0",
    "koa-static": "^5.0.0",
    "koa-views": "^6.1.4",
    "moment": "^2.22.2",
    "moment-timezone": "^0.5.23",
    "node-fetch": "^2.2.0",
    "nunjucks": "^3.1.3",
    "url-search-params-polyfill": "^5.0.0",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@semantic-release/changelog": "^3.0.1",
    "@semantic-release/git": "^7.0.5",
    "ava": "^1.0.1",
    "babel-loader": "^8.0.4",
    "babel-polyfill": "^6.26.0",
    "conventional-changelog-ember": "^2.0.2",
    "css-loader": "^2.0.1",
    "eslint": "^5.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.10.0",
    "nodemon": "^1.18.5",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "sass-loader": "^7.1.0",
    "semantic-release": "^15.10.7",
    "style-loader": "^0.23.1",
    "webpack": "^4.28.0",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.5"
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "src"
    ],
    "ext": "js,mjs,html.j2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "release": {
    "branch": "production",
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "ember",
          "parserOpts": {
            "headerPattern": "\\[(.*) (.*)] ?(.*)"
          }
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "ember",
          "parserOpts": {
            "headerPattern": "\\[(.*) (.*)] ?(.*)"
          }
        }
      ],
      [
        "@semantic-release/changelog",
        {
          "changelogTitle": "# PagerBeauty Changelog"
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "assets/dist-prod/**/*.{js,css}",
            "package.json"
          ],
          "message": "${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
